        name                    = 3
        not_found               = 4
        object                  = 5
        reference_check         = 6
        wrong_access_to_archive = 7
        OTHERS                  = 8.
    IF sy-subrc <> 0.
* Implement suitable error handling here
    ENDIF.
    READ TABLE lt_lines INDEX 1.
    IF sy-subrc = 0.
      MOVE lt_lines-tdline TO wa_ekpo-txpos.
    ENDIF.
    MODIFY it_ekpo FROM wa_ekpo.
